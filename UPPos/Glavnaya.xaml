<Page x:Class="UPPos.Glavnaya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPPos"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Glavnaya">

    <Grid Height="700" Width="1200">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" 
                  HorizontalAlignment="Left"
                  
                   Width="1200" Background="#7AA7D2" RenderTransformOrigin="0.499,0.48" Margin="0,0,0,675" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Width="309">
                <TextBlock Text="Поиск: " 
                           Width="74" TextAlignment="Center" 
                           Foreground="White"
                           FontStyle="Normal"
                           FontFamily="Bahnschrift" FontSize="20" RenderTransformOrigin="0.847,0.562" 
                           />
                <TextBox Width="225"
                         x:Name="TBoxSearch"
                         FontSize="15"
                        
                         Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сортировка: "
                           Foreground="White"
                           Width="131"
                           FontFamily="Bahnschrift"
                           TextAlignment="Right" FontSize="20"/>
                <ComboBox Width="271"
                          x:Name="ComboType"
                        
                          DisplayMemberPath="Title"/>
                <TextBlock Text="Фильтрация: "
                    Foreground="White"
                    Width="132"
                    FontFamily="Bahnschrift"
                    TextAlignment="Right" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox Width="251"
                    x:Name="ComboType_Copy"
                   
                    DisplayMemberPath="Title"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Back"
                           Text="Выход"
                           FontFamily="Bahnschrift"
                           FontSize="20" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Cursor="Hand" 
                           Margin="20,0,0,0"
                           MouseLeftButtonDown="Back_MouseLeftButtonDown"
                           Width="78" RenderTransformOrigin="1.032,0.655"/>
            </StackPanel>

        </WrapPanel>
        <ListView
                  x:Name="LViewTours"
                  ItemsSource="{Binding Service}" 
                  Margin="0,25,0,105"
                  Visibility="Visible"
                  Cursor="Hand" Grid.ColumnSpan="2">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid 
                          Cursor="Hand">
                        <Border BorderThickness="1" 
                            BorderBrush="Black" 
                            CornerRadius="5">

                            <Grid Margin="0" 
                              HorizontalAlignment="Stretch">
                                <Grid.ToolTip>
                                    <ToolTip>
                                        Перейти
                                    </ToolTip>
                                </Grid.ToolTip>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="1"
                                        Margin="15"
                                        Orientation="Horizontal">
                                    <Image Source="/Image/zagl.jpg"
                                       Height="100" Width="160"
                                       HorizontalAlignment="Left"/>
                                    <StackPanel Grid.Column="1"
                                            Margin="0"
                                            Orientation="Vertical">
                                        <TextBlock Text="{Binding service1}"
                                               Name="Ser"
                                               FontFamily="Monotype Corsiva"
                                               FontSize="30"/>
                                        <TextBlock Text="{Binding price}"
                                               FontFamily="Monotype Corsiva"
                                               FontSize="30"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox x:Name="Time" 
                 Text="{Binding TickCounter,
                 RelativeSource={RelativeSource FindAncestor,
                 AncestorType={x:Type local:Glavnaya}}}"
                 HorizontalAlignment="Left" 
                 Margin="1115,610,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 FontFamily="Monotype Corsiva"
                 FontSize="30" 
                 Foreground="#7AA7D2" 
                 FontWeight="Bold" 
                 TextChanged="Time_TextChanged"
                 BorderBrush="{x:Null}"
                 Background="{x:Null}"
                 SelectionBrush="{x:Null}" Width="56" IsEnabled="False"/>
        <Label Content="Осталось времени" HorizontalAlignment="Left" Margin="930,610,0,0" VerticalAlignment="Top" FontSize="20" Height="36" Foreground="#FF7AA7D2"/>


    </Grid>
</Page>
